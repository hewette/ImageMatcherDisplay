<Window x:Class="ImageMatcherDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMatcherDisplay"
        mc:Ignorable="d"
        Title="Image Matcher" Height="632.258" Width="1256.048">

    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <WrapPanel>
                <Image Width="200" Height="300" Stretch="Fill" Source="{Binding}"/>
                <TextBlock Text="{Binding}"/>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" Click="MenuItem_OpenConfig_OnClick"/>
                <MenuItem Header="_Save" Click="MenuItemSaveConfig_OnClick" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="Images">
                <MenuItem Header="_Get Images" Click="MenuItemGetImage_OnClick" />
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Hello" />
            <TextBlock Text="World" />
        </StackPanel>

        <TabControl HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            <TabItem Header="Small">
                <TextBlock Text="Just Some Small Stuff" />
            </TabItem>
            <TabItem Header="Bigger">
                <StackPanel>
                    <ListBox ItemsSource="{Binding Path=imageSource, ElementName=AdminWindow}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding Path=Value}"></Image>
                                    <Label Content="{Binding Path=Key}"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>

</Window>
